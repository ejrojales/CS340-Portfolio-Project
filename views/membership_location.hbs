<!--Read Membershp Locations-->
<h2 class="pageTitle">Membership Location</h2>

<div>
    <table border="1" cellpadding="5" id="membershiplocation-table">
        <thead>
            <thead>
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                    <th>Delete</th>
                </tr>
            </thead>
        </thead>

        <tbody>
            <!-- For each row, print the id, fname, lname, homeworld and age, in order -->
            {{#each data}}
            <tr data-value={{this.ID}}>
                <td>{{this.ID}}</td>
                <td>{{this.[Membership Name]}}</td>
                <td>{{this.[Location Access]}}</td>
                <td><button onclick="deleteMembershipLocation({{this.ID}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<br>

<div class="forms">
    <!--Create Membership Location-->
    <div class="createForm">
        <h3>Add a Membership's Location Access</h3>
        <form id="addMembershipLocation" method="POST" action="/add-membershiplocation-form">
            <label> Membership Name </label>
            <select name="input-membership" id="input-membership" required>
                <option value="">Select a Membership</option>
                {{#each memberships}}
                <option value="{{this.membership_id}}">{{this.membership_name}}</option>
                {{/each}}
            </select>
            <span>*Required</span>
            <br>

            <label> Location </label>
            <select name="input-location" id="input-location" required>
                <option value="">Select a Location</option>
                {{#each locations}}
                <option value="{{this.location_id}}">{{this.address}}</option>
                {{/each}}
            </select>
            <span>*Required</span>
            <br>
            <input class=" btn" type="submit" id="addMembershipLocation" value="Add a Membership's Location Access">
        </form>
    </div>
</div>
<script src="/js/delete_membership_location.js"></script>