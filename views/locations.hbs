<h1> Locations </h1>
<div>
    <a href="/">Home</a> | <a href="/customers">Customers</a> | <a href="/memberships">Memberships</a> | <a
        href="/locations">Locations</a> | <a href="fitness_classes">Fitness_Classes</a> | <a
        href="/personal_trainers">Personal_Trainers</a> | <a href="/trainer_customer">Trainer_Customer</a> | <a
        href="/class_schedule">Class_Schedule</a> | <a href="/membership_location">Membership_Location</a>
</div>

<!--Read Locations-->
<div style="display:block">
    <p><strong>Browse Locations</strong></p>
    <table border="1" cellpadding="5" id="locations-table">
        <thead>
            <thead>
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                    <th>Delete</th>
                </tr>
            </thead>
        </thead>

        <tbody>
            <!-- For each row, print the id, fname, lname, homeworld and age, in order -->
            {{#each data}}
            <tr data-value={{this.ID}}>
                <td>{{this.ID}}</td>
                <td>{{this.[Operating Hours]}}</td>
                <td>{{this.[Phone Number]}}</td>
                <td>{{this.Address}}</td>
                <td><button onclick="deleteLocation({{this.ID}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<br>

<!--Create Location-->
<div id="insert" style="display: block">
    <form id="addLocation" method="POST" action="/add-location-form">
        <legend><strong>Add a Location</strong></legend>
        <fieldset class="fields">
            <label> Operating Hours </label> <input type="text" name="input-operatinghours" id="input-operatinghours"
                required>
            <span>*Required</span>
            <br>
            <label> Phone Number </label> <input type="text" name="input-phonenumber" id="input-phonenumber" required>
            <span>*Required</span>
            <br>
            <label> Address </label> <input type="text" name="input-address" id="input-address" required>
            <span>*Required</span>
            <br>
        </fieldset>
        <input class=" btn" type="submit" id="addLocation" value="Add a Location">
        <input class="btn" type="button" value="cancel">
    </form>
</div>
<br>

<script src="/js/delete_location.js"></script>