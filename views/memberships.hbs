<h1> Memberships </h1>
<div>
    <a href="/">Home</a> | <a href="/customers">Customers</a> | <a href="/memberships">Memberships</a> | <a
        href="/locations">Locations</a> | <a href="fitness_classes">Fitness_Classes</a> | <a
        href="/personal_trainers">Personal_Trainers</a> | <a href="/trainer_customer">Trainer_Customer</a> | <a
        href="/class_schedule">Class_Schedule</a> | <a href="/membership_location">Membership_Location</a>
</div>

<!--Read Membershps-->
<div style="display:block">
    <p><strong>Browse Memberships</strong></p>
    <table border="1" cellpadding="5" id="memberships-table">
        <thead>
            <thead>
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                    <th>Delete</th>
                </tr>
            </thead>
        </thead>

        <tbody>
            <!-- For each row, print the id, fname, lname, homeworld and age, in order -->
            {{#each data}}
            <tr data-value={{this.ID}}>
                <td>{{this.ID}}</td>
                <td>{{this.Membership_Name}}</td>
                <td>{{this.Description}}</td>
                <td>{{this.Duration}}</td>
                <td><button onclick="deleteMembership({{this.ID}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<br>

<!--Create Membership-->
<div id="insert" style="display: block">
    <form id="addMembership" method="POST" action="/add-membership-form">
        <legend><strong>Add a Membership</strong></legend>
        <fieldset class="fields">
            <label> Membership Name </label> <input type="text" name="input-membershipname" id="input-membershipname">
            <span>*Required</span>
            <br>
            <label> Description </label> <input type="text" name="input-description" id="input-description">
            <span>*Required</span>
            <br>
            <label> Duration </label> <input type="text" name="input-duration" id="input-duration">
            <span>*Required</span>
            <br>
        </fieldset>
        <input class=" btn" type="submit" id="addMembership" value="Add a Membership">
        <input class="btn" type="button" value="cancel">
    </form>
</div>

<script src="/js/delete_membership.js"></script>